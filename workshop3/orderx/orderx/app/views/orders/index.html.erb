<h1>Orders:</h1>

<table border="1" cellpadding="3">
  <tr>
    <th>ID</th>
    <th>Customer Name</th>
    <th>Created Date</th>
    <th></th>
    <th></th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
      <td><%= order.id %></td>
      <td><%= order.customer_name %></td>
      <td><%= order.created_at %></td>
      <td><a href="/orders/<%= order.id %>">Details</a></td>
      <td><a href="/orders/<%= order.id %>/delete">Delete</a></td>
  </tr>
  <% end %>
</table>

